<body>
  <div class="">
    <header class="display-flex justify-space-between align-center p-2">
      <nav>
        <h1 class="col text-primary ">
          Meal Buddy

        </h1>
        <!-- Conditionally render login or logout links -->
        {{#if logged_in}}
        <div class="col ">
          <div class="row-auto">
            <h2>Welcome, {{username}}!</h2>
          </div>
        <a href="/profile" class="mr-2">profile</a> |
        <a href="#" class="ml-1" id="logout">logout</a>
        </div>
        {{/if}}
      </nav>
    </header>
    <main class="container container-fluid mt-5">
      <!-- Render the sub layout -->
      {{{ body }}}
    </main>
    <footer>

    </footer>
  </div>

  <!-- Render script for logged in users only -->
  {{#if logged_in}}
  <script src="/js/logout.js"></script>
  {{/if}}
